<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/issueTokenFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".admin.activities.AdminActivity">


    <ImageButton
        android:id="@+id/closeNfcDialogButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/close_button"/>


    <TextView
        android:id="@+id/nfcTagLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nfc_tag_dialog_label"
        style="@style/RegularText"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/nfcTagInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="32"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:hint="@string/add_nfc_tag_input_hint"
        android:textSize="26sp"
        android:layout_margin="40dp"
        android:fontFamily="@font/work_sans"
        app:layout_constraintTop_toBottomOf="@+id/nfcTagLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/InputText"
        android:textColor="#ff333333"
        tools:text="10" />



    <Button
        android:id="@+id/addButton"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:layout_margin="20dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:fontFamily="@font/work_sans_medium"
        android:textAllCaps="true"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/nfcTagInput"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/add_nfc_tag" />


</android.support.constraint.ConstraintLayout>
