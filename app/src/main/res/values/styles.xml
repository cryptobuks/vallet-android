<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primaryFont</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark" tools:targetApi="23">@color/black</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ValletFont">
        <item name="android:fontFamily">@font/work_sans</item>
    </style>
    <style
        name="ValletText"
        parent="@style/ValletFont">
        <item name="android:fontFamily">Work Sans</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">28.8sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="RegularText"
        parent="@style/ValletFont">
        <item name="android:fontFamily">Work Sans</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style
        name="LabelText"
        parent="@style/ValletFont">
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">#FF0A9FFA</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style
        name="InputText"
        parent="@style/ValletFont">
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">24sp</item>
    </style>


</resources>
