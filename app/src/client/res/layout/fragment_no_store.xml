<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NoStoreFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/place_holder_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/place_holder_label"
            android:padding="30dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:fontFamily="@font/work_sans_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Button
            android:id="@+id/add_store_button"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_margin="20dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:fontFamily="@font/work_sans_medium"
            android:textAllCaps="true"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/place_holder_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/add_store_button" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
